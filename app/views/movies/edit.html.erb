<% content_for :title, t('movies.edit') %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3><i class="fas fa-edit"></i> <%= t('movies.edit') %></h3>
        <%= link_to t('movies.view'), @movie, class: "btn btn-sm btn-outline-primary" %>
      </div>
      <div class="card-body">
        <%= render 'form', movie: @movie %>
      </div>
    </div>
  </div>
</div>
